<p id="notice"><%= notice %></p>
<div id="wrapper">
    <div id="page-wrapper">
      <p id="notice"><%= notice %></p>

      <div class="row">
          <div class="col-lg-12">
              <h1 class="page-header"><%= @project.name %></h1>
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <%= @project.name %> Controls
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                    <div class="table-responsive">
                      <table id="project_controls_datatable" class="display">
                        <thead>
                          <tr>
                            <th>Control ID </th>
                            <th>Title</th>
                            <th>Impact </th>
                            <th>Srg Id</th>
                            <th>Nist Families</th>
                            <th></th>
                            <th></th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @project.project_controls.each do |project_control| %>
                            <tr>
                              <td><%= project_control.control_id %></td>
                              <td><%= project_control.title %></td>
                              <td><%= project_control.impact %></td>
                              <td><%= project_control.srg_title_id %></td>
                              <% project_control.nist_controls.each do |nist| %>
                                <td><%= nist.family + '-' + nist.index %></td>
                              <% end %>
                              <td><%= link_to 'Show', project_control %></td>
                              <td><%= link_to 'Edit', edit_project_control_path(project_control) %></td>
                              <td><%= link_to 'Destroy', project_control, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>  
                  </div>
              </div>
              <%= link_to 'Back', projects_path %>
                  <!-- /.panel-body -->
            </div>
          </div>
      </div>
  </div>
</div> 
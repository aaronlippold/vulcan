<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Uploaded SRGs</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        SRGs
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                              <thead>
                                <tr>
                                  <th>Title</th>
                                  <th>Description</th>
                                  <th>Publisher</th>
                                  <th>Published</th>
                                  <th colspan="3"></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @srgs.each do |srg| %>
                                  <tr>
                                    <td><%= srg.title %></td>
                                    <td><%= srg.description %></td>
                                    <td><%= srg.publisher %></td>
                                    <td><%= srg.published %></td>
                                    <td><%= link_to 'Show', srg %></td>
                                    <td><%= link_to 'Edit', edit_srg_path(srg) %></td>
                                    <td><%= link_to 'Destroy', srg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
    </div>
</div>

<br>

<%= link_to 'New Srg', new_srg_path %>

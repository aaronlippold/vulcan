<p id="notice"><%= notice %></p>

<h1>Controls</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Impact</th>
      <th>Check Text</th>
      <th>Fix Text</th>
      <th>Srg Id</th>
      <th>Code</th>
      <th>Control</th>
      <th>Sl ref</th>
      <th>Sl line</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controls.each do |control| %>
      <tr>
        <td><%= control.title %></td>
        
        <td><%= control.description %></td>
        <td><%= control.impact %></td>
        <td><%= control.code %></td>
        <td><%= control.control_id %></td>
        <td><%= control.checktext %></td>
        <td><%= control.fixtext %></td>
        <td><%= control.srg_title_id %></td>
        <td><%= control.sl_ref %></td>
        <td><%= control.sl_line %></td>
        <td><%= link_to 'Show', control %></td>
        <td><%= link_to 'Edit', edit_control_path(control) %></td>
        <td><%= link_to 'Destroy', control, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


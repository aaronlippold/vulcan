<p id="notice"><%= notice %></p>

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Profiles</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Profiles
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                      <table id="profiles_datatable" class="display">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Title</th>
                              <th>Maintainer</th>
                              <th></th>
                              <th></th>
                              <th></th>
                              <th></th>
                            </tr>
                          </thead>

                          <tbody>
                            <% @profiles.each do |profile| %>
                              <tr>
                                <td><%= profile.name %></td>
                                <td><%= profile.title %></td>
                                <td><%= profile.maintainer %></td>
                                <td><%= link_to 'Show Controls', profile %></td>
                                <td><%= link_to 'Edit Profile', edit_profile_path(profile) %></td>
                                <td><%= link_to 'Export Profile', profile_path(profile, format: :json) %></td>
                                <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
    </div>
</div>


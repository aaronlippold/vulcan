<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Maintainer</th>
      <th>Copyright</th>
      <th>Copyright email</th>
      <th>License</th>
      <th>Summary</th>
      <th>Version</th>
      <th>Sha256</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.title %></td>
        <td><%= profile.maintainer %></td>
        <td><%= profile.copyright %></td>
        <td><%= profile.copyright_email %></td>
        <td><%= profile.license %></td>
        <td><%= profile.summary %></td>
        <td><%= profile.version %></td>
        <td><%= profile.sha256 %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

